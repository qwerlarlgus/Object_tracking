System.GetEnvironmentVariable \
    Name:  'USERNAME' \
    Value=> UserName
    
set pythonPath to 'C:\\Users\\'+UserName+'\\anaconda3\\python.exe'

set workDir to 'C:\\Users\\st\\Desktop\\cv'

set pyScript to workDir +'\\img_show.py'

